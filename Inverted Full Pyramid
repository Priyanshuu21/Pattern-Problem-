#include <iostream>
using namespace std;
int main(){
    int row;
    cout<<"Enter rows :";
    cin>>row;

    for(int i=0;i<row;i++){
//   for spacing
        for (int j = 0; j < i; j++) {
            cout<<" ";
        }
//        for stars
        for (int k = 0; k < row-i ; k++) {
            cout<<"* ";
        }
        cout<<endl;
    }

    return 0;
}
