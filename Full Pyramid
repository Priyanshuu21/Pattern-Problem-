#include <iostream>
using namespace std;
int main() {
    int row;
    cout << "Enter rows :";
    cin >> row;

    for (int i = 0; i < row; i++) {
//        for spacing
        for (int j = 0; j < row - 1 - i; j++) {
            cout << " ";
        }
//        for printing stars
        for (int k = 0; k < i + 1; k++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}
